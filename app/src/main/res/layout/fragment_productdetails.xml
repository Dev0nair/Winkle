<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.productdetails.ProductDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_detail_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="#000"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/product_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/product_detail_image"
            app:layout_constraintTop_toTopOf="@id/product_detail_image"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Nuevo item multiuso"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:layout_marginStart="10dp"
            android:maxLines="2"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_detail_name"
            app:layout_constraintLeft_toRightOf="@id/product_detail_image"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="26.50â‚¬"
            android:textSize="25sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginStart="10dp"

            />

        <TextView
            android:id="@+id/product_detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_detail_image"
            tools:background="@android:color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:lines="15"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/product_detail_images_sv"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/product_detail_description"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_detail_images_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:itemCount="6"
                tools:listitem="@layout/product_detail_image_view"
                />

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/text_contact_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@id/product_detail_images_sv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="Perfil de contacto"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textSize="19sp"
            />

        

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>