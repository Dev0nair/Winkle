<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.productdetails.ProductDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <ImageView
            android:id="@+id/product_detail_image"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginStart="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:scaleType="centerCrop"
            tools:background="#000" />

        <TextView
            android:id="@+id/product_detail_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@id/product_detail_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_detail_image"
            tools:text="Nuevo item multiuso" />

        <TextView
            android:id="@+id/product_detail_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/product_detail_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_name"
            tools:text="26.50€"

            />

        <TextView
            android:id="@+id/product_detail_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_image"
            app:layout_constraintVertical_bias="0"
            tools:background="@android:color/black"
            tools:lines="15" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/product_detail_images_sv"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_description">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_detail_images_rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:itemCount="6"
                tools:listitem="@layout/product_detail_image_view" />

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/text_contact_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_images_sv"
            android:text="@string/text_contact_profile" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/product_detail_profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="@id/text_contact_profile"
            app:layout_constraintTop_toBottomOf="@id/text_contact_profile"
            tools:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/product_detail_profile_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/product_detail_profile_image"
            app:layout_constraintLeft_toRightOf="@id/product_detail_profile_image"
            app:layout_constraintRight_toLeftOf="@id/product_detail_profile_viewprofile"
            app:layout_constraintTop_toTopOf="@id/product_detail_profile_image"
            tools:text="Ismael González" />

        <Button
            android:id="@+id/product_detail_profile_viewprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@id/product_detail_profile_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_detail_profile_name"
            android:text="@string/text_view_profile" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/product_detail_disable_onbuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_profile_name"
            android:text="@string/text_disable_product_next_sale"/>


        <Button
            android:id="@+id/product_detail_add_to_shoplist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_disable_onbuy"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/text_add_to_cart"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintVertical_bias="0"
            />

        <TextView
            android:id="@+id/product_detail_count_shoplist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/product_detail_add_to_shoplist"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Actualmente tienes este producto 4 veces en la cesta"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>