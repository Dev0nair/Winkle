<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.productdetails.ProductDetailsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/product_detail_image"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginStart="20dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                tools:background="#000" />

            <TextView
                android:id="@+id/product_detail_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                app:layout_constraintLeft_toRightOf="@id/product_detail_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/product_detail_image"
                tools:text="Nuevo item multiuso" />

            <TextView
                android:id="@+id/product_detail_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                app:layout_constraintLeft_toRightOf="@id/product_detail_image"
                app:layout_constraintRight_toLeftOf="@id/product_detail_report_btn"
                app:layout_constraintTop_toBottomOf="@id/product_detail_name"
                tools:text="26.50€"
                />

            <RadioButton
                android:id="@+id/product_detail_report_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1.1"
                android:scaleY="1.1"
                app:layout_constraintTop_toTopOf="@id/product_detail_price"
                app:layout_constraintRight_toLeftOf="@id/product_detail_fav_btn"
                app:layout_constraintHorizontal_bias="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_report"
                android:drawableTint="#555"
                android:textColor="@android:color/black"
                android:enabled="false"
                android:layout_marginEnd="5dp"
                tools:text="@string/text_report"
                />

            <RadioButton
                android:id="@+id/product_detail_fav_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="1.1"
                android:scaleY="1.1"
                app:layout_constraintTop_toTopOf="@id/product_detail_report_btn"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/product_detail_report_btn"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:button="@null"
                android:drawableTop="@drawable/ic_fav"
                android:drawableTint="#555"
                android:textColor="@android:color/black"
                android:enabled="false"
                android:layout_marginEnd="20dp"
                tools:text="@string/text_favourite"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/product_detail_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_detail_image"
                app:layout_constraintVertical_bias="0"
                tools:background="@android:color/black"
                tools:lines="15" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/product_detail_images_sv"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_detail_description">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_detail_images_rv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:itemCount="6"
                    tools:listitem="@layout/product_detail_image_view" />

            </androidx.core.widget.NestedScrollView>

            <TextView
                android:id="@+id/text_contact_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/text_contact_profile"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_detail_images_sv" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/product_detail_profile_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="6dp"
                app:layout_constraintLeft_toLeftOf="@id/text_contact_profile"
                app:layout_constraintTop_toBottomOf="@id/text_contact_profile"
                tools:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/product_detail_profile_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/product_detail_profile_image"
                app:layout_constraintLeft_toRightOf="@id/product_detail_profile_image"
                app:layout_constraintRight_toLeftOf="@id/product_detail_profile_viewprofile"
                app:layout_constraintTop_toTopOf="@id/product_detail_profile_image"
                tools:text="Ismael González" />

            <Button
                android:id="@+id/product_detail_profile_viewprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@string/text_view_profile"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@id/product_detail_profile_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/product_detail_profile_name" />

            <Button
                android:id="@+id/product_detail_add_to_shoplist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_background"
                android:text="@string/text_add_to_cart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_detail_profile_image"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/product_detail_count_shoplist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_detail_add_to_shoplist"
                app:layout_constraintVertical_bias="0"
                tools:text="@string/text_count_product_shoplist" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/product_detail_back_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.45"
        android:background="@android:color/black"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        />

    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/product_detail_bigimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.6"
        android:background="@android:color/white"
        android:elevation="6dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        tools:src="@drawable/googleg_standard_color_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        />

</androidx.constraintlayout.widget.ConstraintLayout>